@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DemoApplication.Areas.Admin.ViewModels.Prize
@model List<ListItemViewModel>

<div>
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-route="admin-product-list">Products</a>
                        </li><!--end nav-item-->
                        <li class="breadcrumb-item active">ProductImage</li>
                    </ol>
                </div>
                <h4 class="page-title">Books</h4>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
</div>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-prize-add" class="btn btn-secondary">Add new Prize Image</a>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prize in Model)
                        {
                            <tr>
                                <td><img src="~/@prize.ImageUrl" width="20%" /></td>
                                <td>@prize.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">

                                    <form method="POST" asp-route="admin-prize-delete" asp-route-id="@prize.Id" id="book-image-form-@prize.Id"></form>
                                    <button type="submit" form="book-image-form-@prize.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>